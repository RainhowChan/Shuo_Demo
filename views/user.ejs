<body>


<div class="container">
    <a href="/">返回</a>
    <img src="/<%= userAvatar%>" alt="<%= username%>" style="height: 200px;width: 200px;border-radius:30%;">
    <h3><%=username%></h3>
    <ul>
        <% for(var i=0;i<comments.length;i++){%>
        <li class="item">
        <div>
            <img src="/<%= comments[i].userAvatar%>" alt="<%= comments[i].username%>" width="50">
            <div style="display: inline-block;">
                <div class="username"><%= comments[i].username%></div>
                <div class="time"><%= comments[i].time%></div>
            </div>
        </div>
        <div class="caption">
            <p class="content"><%= comments[i].comment%></p>
            <p><a class="btn btn-default" href="#" role="button">查看详情&raquo;</a></p>
        </div>
        </li>
        <%}%>
    </ul>
</div>
